<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PetAdoption.Mobile.ViewModels"
             xmlns:models="clr-namespace:PetAdoption.Mobile.Models"
             xmlns:dtos="clr-namespace:PetAdoption.Shared.Dtos;assembly=PetAdoption.Shared"
             x:DataType="vm:AllPetsViewModel"
             x:Class="PetAdoption.Mobile.Pages.AllPetsPage"
             Title="Tất cả thú cưng"
             Shell.NavBarIsVisible="False">
    <Grid>
        <RefreshView Command="{Binding LoadPetsCommand}"
                     RefreshColor="{StaticResource Primary}"
                     IsRefreshing="{Binding IsRefreshing}">
            <Grid RowDefinitions="auto, auto, *">
                <SearchBar Grid.Row="0"
                           x:Name="searchBar"
                           Placeholder="Nhập tên, loại, giống thú cưng..."
                           PlaceholderColor="{StaticResource Primary }"
                           TextColor="{StaticResource Primary}"
                           WidthRequest="350"
                           SearchCommand="{Binding SearchCommand}"
                           SearchCommandParameter="{Binding Source={x:Reference searchBar}, Path=Text}"
                           TextChanged="SearchBar_TextChanged"
                           ></SearchBar>
                <Label Grid.Row="1"
                       Text="Kéo xuống để tải lại"
                       FontSize="12"
                       HorizontalOptions="Center"
                       Padding="5"
                       TextColor="{StaticResource Gray500}"></Label>
                <ScrollView Grid.Row="2"
                            Padding="5">
                    <CollectionView ItemsSource="{Binding Pets}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="dtos:PetListDto">
                                <VerticalStackLayout Margin="5, 10">
                                    <Border BackgroundColor="White"
                                            StrokeShape="RoundRectangle 15 0 0 0 "
                                            StrokeThickness="0">
                                        <Grid ColumnDefinitions="auto, *"
                                              ColumnSpacing="15">
                                            <Image Grid.Column="0"
                                                   Source="{Binding Image}"
                                                   HeightRequest="150"
                                                   WidthRequest="150"
                                                   Aspect="AspectFill">
                                                <Image.Shadow>
                                                    <Shadow Brush="{StaticResource Primary}"
                                                            Radius="50"></Shadow>
                                                </Image.Shadow>
                                            </Image>
                                            <VerticalStackLayout Grid.Column="1"
                                                                 VerticalOptions="Center"
                                                                 Spacing="10">
                                                <Label Text="{Binding Name}"
                                                       FontSize="22"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource Primary}"></Label>
                                                <Label Text="{Binding Breed}"
                                                       FontSize="16"></Label>
                                                <Label Text="{Binding Price, StringFormat='{0:C}'}"
                                                       FontSize="18"
                                                       TextColor="{StaticResource Primary}"></Label>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Border>
                                    <BoxView Color="{StaticResource Primary}"
                                             HeightRequest="1"
                                             Margin="0, -1, 0, 0 "
                                             Opacity="0.4"></BoxView>
                                    <VerticalStackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:AllPetsViewModel}}, 
                                            Path=GoToDetailPageCommand}"
                                                              CommandParameter="{Binding Id}"></TapGestureRecognizer>
                                    </VerticalStackLayout.GestureRecognizers>
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <VerticalStackLayout
                                HorizontalOptions="Center"
                                VerticalOptions="Center">
                                <Label Text="Không có thú cưng được tìm thấy"
                                       FontSize="25"
                                       TextColor="Gray"
                                       HorizontalOptions="Center">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding IsBusy}"
                                                     Value="true">
                                            <Setter Property="Text"
                                                    Value="Tìm kiếm..."></Setter>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                                
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </ScrollView>
            </Grid>
        </RefreshView>
        <ActivityIndicator HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Color="{StaticResource Primary}"
                           IsRunning="{Binding IsBusy}"></ActivityIndicator>
    </Grid>
</ContentPage>